<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color -->
    <solid android:color="#FFFFFF"/> <!-- White background for the shape -->

    <!-- Set the border -->
    <stroke
        android:color="#888581"
    android:width="2dp"/> <!-- Border width -->

    <!-- Set rounded corners -->
    <corners android:radius="50dp"/> <!-- Corner radius for rounded edges -->

    <!-- Optional: Add padding to control the space between the border and content -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
